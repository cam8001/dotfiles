! ===[Font Configuration]==========================
Xft.dpi: 72
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

urxvt.font: xft:Meslo LG S:pixelsize=11
urxvt.boldFont: xft:Meslo LG S:pixelsize=11:style=bold
urxvt.italicFont: xft:Meslo LG S:pixelsize=11:style=italic

! ===[Misc Configuration]==========================
urxvt.geometry: 120x40
urxvt.visualBell: true
urxvt.saveLines: 4096
urxvt.fading: 25%
urxvt.cursorBlink: true
urxvt.loginShell: true

! ===[Extensions]==================================
urxvt.perl-lib:          /Users/smerrill/dotfiles/urxvt-perls
urxvt.perl-ext-common:   default,macosx-clipboard,url-select,keyboard-select
urxvt.urlLauncher:       open
urxvt.urlButton:         1
urxvt.matcher.button:    1
urxvt.underlineURLs:     true
!urxvt.keysym.W-c: perl:macosx-clipboard:copy
urxvt.keysym.M-v:            perl:macosx-clipboard:paste
urxvt.keysym.M-k:            perl:keyboard-select:activate
URxvt.searchable-scrollback: M-f
urxvt.keysym.M-u:            perl:url-select:select_next
!urxvt.searchable-scrollback: M-f

!urxvt.perl-ext-common: macosx-clipboard
!urxvt.keysym.M-c: perl:macosx-clipboard:copy
!urxvt.keysym.M-v: perl:macosx-clipboard:paste

