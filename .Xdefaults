! ===[Font Configuration]==========================
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

urxvt.font: xft:Mensch:pixelsize=11

! ===[Misc Configuration]==========================
urxvt.geometry: 120x40
urxvt.visualBell: true
urxvt.saveLines: 8192
urxvt.fading: 0
urxvt.cursorBlink: true
urxvt.loginShell: true

! ===[Extensions]==================================
urxvt.perl-lib:          /Users/smerrill/dotfiles/.urxvt/urxvt-perls:/Users/smerrill/dotfiles/.urxvt/urxvt-tabbedex
urxvt.perl-ext-common:   default,clipboard,url-select,keyboard-select,tabbedex
urxvt.keysym.M-v:        perl:clipboard:paste
urxvt.keysym.M-y:        perl:keyboard-select:activate

urxvt.urlLauncher:       /Users/smerrill/bin/rxvt-url-open
urxvt.urlButton:         1
urxvt.matcher.button:    1
urxvt.underlineURLs:     true
urxvt.searchable-scrollback: M-f
urxvt.keysym.M-u:        perl:url-select:select_next

! Native OS X copypasta.
urxvt.copyCommand:       pbcopy
urxvt.pasteCommand:      pbpaste

! Tabbed browsing that jives with my Mac OS X-learned muscle memory.
URxvt.tabbed.autohide:     true
urxvt.keysym.M-t:          perl:tabbedex:new_tab
urxvt.keysym.M-braceright: perl:tabbedex:next_tab
urxvt.keysym.M-braceleft:  perl:tabbedex:prev_tab

! ===[UI Config]===================================
urxvt.scrollBar: true
urxvt.scrollBar_right: true
urxvt.scrollstyle: plain

! ===[Colorscheme]=================================
#include ".colors/solarized-light"

