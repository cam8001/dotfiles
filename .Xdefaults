! ===[Font Configuration]==========================
Xft.dpi: 72
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

urxvt.font: xft:Mensch:pixelsize=13
urxvt.boldFont: xft:Mensch:pixelsize=13:style=bold
urxvt.italicFont: xft:Mensch:pixelsize=13:style=italic
!urxvt.font: xft:Meslo LG S:pixelsize=11
!urxvt.boldFont: xft:Meslo LG S:pixelsize=11:style=bold
!urxvt.italicFont: xft:Meslo LG S:pixelsize=11:style=italic

! ===[Misc Configuration]==========================
urxvt.geometry: 120x40
urxvt.visualBell: true
urxvt.saveLines: 4096
urxvt.fading: 25%
urxvt.cursorBlink: true
urxvt.loginShell: true

! ===[Extensions]==================================
urxvt.perl-lib:          /Users/smerrill/dotfiles/urxvt-perls:/Users/smerrill/dotfiles/urxvt-tabbedex
urxvt.perl-ext-common:   default,macosx-clipboard,url-select,keyboard-select,tabbedex
urxvt.keysym.M-v:        perl:macosx-clipboard:paste
urxvt.keysym.M-y:        perl:keyboard-select:activate

urxvt.urlLauncher:       /Users/smerrill/bin/rxvt-url-open
urxvt.urlButton:1
urxvt.matcher.button:    1
urxvt.underlineURLs:     true
urxvt.searchable-scrollback: M-f
urxvt.keysym.M-u:            perl:url-select:select_next

! Tabbed browsing that jives with my Mac OS X-learned muscle memory.
URxvt.tabbed.autohide:     true
urxvt.keysym.M-t:          perl:tabbedex:new_tab
urxvt.keysym.M-braceright: perl:tabbedex:next_tab
urxvt.keysym.M-braceleft:  perl:tabbedex:prev_tab

! ===[Colorscheme]=================================
urxvt.background: #2B2B2B
urxvt.foreground: #DEDEDE
urxvt.scrollBar: true
urxvt.scrollBar_right: true
urxvt.scrollstyle: plain

